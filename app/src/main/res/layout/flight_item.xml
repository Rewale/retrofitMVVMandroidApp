<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flight_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:rowCount="3"
    android:columnCount="3">

    <TextView
        android:layout_column="1"
        android:layout_row="0"
        android:id="@+id/fligtNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:text="№ "
        android:layout_gravity="fill"
        app:layout_constraintStart_toEndOf="@+id/companyImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DateOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_gravity="fill"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="Вылет в "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/companyImage"
        android:layout_width="104dp"
        android:layout_height="78dp"
        android:layout_rowSpan="2"
        android:layout_column="0"
        android:layout_gravity="fill"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="fill"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="20dp"
        android:text="Цена от: "
        app:layout_constraintStart_toEndOf="@+id/companyImage"
        app:layout_constraintTop_toBottomOf="@+id/fligtNum" />

    <TextView
        android:id="@+id/fromToAirports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/DateOut" />
</androidx.constraintlayout.widget.ConstraintLayout>